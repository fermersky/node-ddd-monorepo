{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "pipeline": {
    "server#build": {
      "outputs": ["apps/server/dist/**"]
    },
    "docs#build": {
      "outputs": ["apps/docs/build/**"]
    },
    "shared#build": {
      "outputs": ["apps/shared/dist/**"]
    },
    "web#build": {
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "format": {},
    "lint": {},
    "test": {},
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
