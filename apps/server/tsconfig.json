{
  "extends": "tsconfig/base",
  "include": ["./src/**/*", "knexfile.js"],
  "exclude": ["jest.config.js"],
  "compilerOptions": {
    "paths": {
      "@domain/*": ["./src/domain/*"],
      "@infrastructure/*": ["./src/infrastructure/*"],
      "@api/*": ["./src/api/*"]
    },
    "sourceMap": false,
    "moduleResolution": "NodeNext",
    "module": "NodeNext",
    "verbatimModuleSyntax": true,
    "outDir": "./dist",
    "allowJs": true,
    "lib": ["ESNext"]
  }
}
