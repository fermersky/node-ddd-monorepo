{
  "extends": "tsconfig/base",
  "include": ["./src/**/*"],
  "compilerOptions": {
    "paths": {
      // "@domain/*": ["../shared/domain/*"],
      // "@shared/http/*": ["../shared/http/*"],
      "@core/*": ["./src/core/*"],
      "@infrastructure/*": ["./src/infrastructure/*"],
      "@api/*": ["./src/api/*"]
    },
    "sourceMap": false,
    "moduleResolution": "NodeNext",
    "module": "NodeNext",
    "verbatimModuleSyntax": true,
    "outDir": "./dist",
    "allowJs": true,
    "lib": ["ESNext"]
  }
}
